<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="DummyCard" parent="CardView">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="text_base" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textColor">@color/textDark</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="text_title_normal" parent="text_base">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_title_select" parent="text_title_normal">
        <item name="android:textColor">@color/color_yellow</item>
    </style>

    <style name="text_description" parent="text_base">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/secondaryText</item>
    </style>

    <style name="text_dummy_title" parent="text_base">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textDark</item>
    </style>

    <style name="text_dummy_message" parent="text_base">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textDark</item>
    </style>

    <style name="text_dummy_label" parent="text_base">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textDark</item>
    </style>

    <style name="text_loading" parent="text_base">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="text_result" parent="text_base">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    
    <style name="text_faq_question" parent="text_base">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textDark</item>
    </style>

    <style name="text_faq_answer" parent="text_base">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textDark</item>
    </style>

    <style name="card_text_error">
        <item name="android:textColor">@color/color_error_text</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="card_text_label">
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="card_text_field">
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ButtonColored" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/selector_button_shape</item>
        <item name="android:backgroundTint">@color/btn_bg_enable</item>
        <item name="android:textColor">@color/btn_text</item>
        <item name="android:elevation">0dp</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="til" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/raleway</item>
        <item name="android:fontFamily">@font/raleway</item>
    </style>

    <style name="tiet" parent="@android:style/TextAppearance.Material">
        <item name="fontFamily">@font/ttlakes</item>
        <item name="android:fontFamily">@font/ttlakes</item>
    </style>

</resources>
